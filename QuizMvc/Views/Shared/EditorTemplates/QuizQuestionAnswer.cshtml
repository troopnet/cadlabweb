@model QuizMvc.Models.QuizQuestionAnswer

    <p><strong>@Model.QuestionText</strong></p>

    @Html.EditorFor(m => m.QuestionId)

    <ul class="list-group">

        @for (int i = 0; i < Model.Options.Count(); i++)
        {
            <li class="list-group-item">
                <input asp-for="@Model.SelectedOptionId" type="radio" value="@Model.Options[i].OptionId" /> @Model.Options[i].OptionText
            </li>
        }
    </ul>

